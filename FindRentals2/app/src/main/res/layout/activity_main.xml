<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.midterm.findrentals.AnimationView
        android:layout_width="317dp"
        android:layout_height="435dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:id="@+id/animationView"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="300dp"
        android:id="@+id/buttonListView"
        android:layout_gravity="center_horizontal"
        android:text="View List of Rentals"
        android:onClick="openListView"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="300dp"
        android:id="@+id/buttonMapsView"
        android:layout_gravity="center_horizontal"
        android:text="View Rentals On Map"
        android:onClick="openMapsView"/>

</LinearLayout>