<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonListView"
        android:layout_width="@dimen/main_btn_width"
        android:layout_height="@dimen/main_btn_height"
        android:background="@drawable/main_button"
        android:onClick="openListView"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:drawableTop="@drawable/find_house"
        android:text="List all rentals"
        android:textSize="@dimen/main_btn_text_size"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonMapsView"
        android:layout_width="@dimen/main_btn_width"
        android:layout_height="@dimen/main_btn_height"
        android:background="@drawable/main_button"
        android:onClick="openMapsView"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:drawableTop="@drawable/location"
        android:text="Rentals on map"
        android:textSize="@dimen/main_btn_text_size"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/buttonFavoriteList"
        app:layout_constraintStart_toEndOf="@+id/buttonListView" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonYourRental"
        android:layout_width="@dimen/main_btn_width"
        android:layout_height="@dimen/main_btn_height"
        android:background="@drawable/main_button"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:drawableTop="@drawable/my_house"
        android:text="Your rentals"
        android:textSize="@dimen/main_btn_text_size"
        app:layout_constraintTop_toBottomOf="@+id/buttonListView"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonFavoriteList"
        android:layout_width="@dimen/main_btn_width"
        android:layout_height="@dimen/main_btn_height"
        android:background="@drawable/main_button"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:drawableTop="@drawable/favorite"
        android:text="Favorite rentals"
        android:textSize="@dimen/main_btn_text_size"
        app:layout_constraintTop_toBottomOf="@+id/buttonMapsView"
        app:layout_constraintStart_toEndOf="@+id/buttonYourRental" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonProfile"
        android:layout_width="@dimen/main_btn_width"
        android:layout_height="@dimen/main_btn_height"
        android:background="@drawable/main_button"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:drawableTop="@drawable/profile"
        android:text="Profile"
        android:textSize="@dimen/main_btn_text_size"
        app:layout_constraintTop_toBottomOf="@+id/buttonYourRental"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonSetting"
        android:layout_width="@dimen/main_btn_width"
        android:layout_height="@dimen/main_btn_height"
        android:background="@drawable/main_button"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:drawableTop="@drawable/settings"
        android:text="Setting"
        android:textSize="@dimen/main_btn_text_size"
        app:layout_constraintTop_toBottomOf="@+id/buttonFavoriteList"
        app:layout_constraintStart_toEndOf="@+id/buttonProfile"/>

</androidx.constraintlayout.widget.ConstraintLayout>