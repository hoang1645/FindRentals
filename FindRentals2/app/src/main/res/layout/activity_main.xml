<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonListView"
                android:layout_width="@dimen/main_btn_width"
                android:layout_height="@dimen/main_btn_height"
                android:layout_weight="1"
                android:background="@drawable/main_button"
                android:onClick="openListView"
                android:layout_margin="20dp"
                android:padding="10dp"
                android:drawableTop="@drawable/find_house"
                android:text="List all rentals"
                android:textSize="@dimen/main_btn_text_size" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonMapsView"
                android:layout_width="@dimen/main_btn_width"
                android:layout_height="@dimen/main_btn_height"
                android:layout_weight="1"
                android:background="@drawable/main_button"
                android:onClick="openMapsView"
                android:layout_margin="20dp"
                android:padding="10dp"
                android:drawableTop="@drawable/location"
                android:text="Rentals on map"
                android:textSize="@dimen/main_btn_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonYourRentals"
                android:layout_width="@dimen/main_btn_width"
                android:layout_height="@dimen/main_btn_height"
                android:layout_weight="1"
                android:background="@drawable/main_button"
                android:layout_margin="20dp"
                android:padding="10dp"
                android:drawableTop="@drawable/my_house"
                android:text="List your rentals"
                android:textSize="@dimen/main_btn_text_size"
                android:onClick="openYourRental"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonFavorite"
                android:layout_width="@dimen/main_btn_width"
                android:layout_height="@dimen/main_btn_height"
                android:layout_weight="1"
                android:background="@drawable/main_button"
                android:layout_margin="20dp"
                android:padding="10dp"
                android:drawableTop="@drawable/favorite"
                android:text="Favorite rentals"
                android:textSize="@dimen/main_btn_text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonProfile"
                android:layout_width="@dimen/main_btn_width"
                android:layout_height="@dimen/main_btn_height"
                android:layout_weight="1"
                android:background="@drawable/main_button"
                android:layout_margin="20dp"
                android:padding="10dp"
                android:drawableTop="@drawable/profile"
                android:text="Profile"
                android:textSize="@dimen/main_btn_text_size" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonSetting"
                android:layout_width="@dimen/main_btn_width"
                android:layout_height="@dimen/main_btn_height"
                android:layout_weight="1"
                android:background="@drawable/main_button"
                android:layout_margin="20dp"
                android:padding="10dp"
                android:drawableTop="@drawable/settings"
                android:text="Setting"
                android:textSize="@dimen/main_btn_text_size" />

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>