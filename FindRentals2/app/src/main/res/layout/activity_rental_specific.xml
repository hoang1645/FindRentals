<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RentalSpecific">

    <LinearLayout
        android:id="@+id/rentalSpecificContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/rentalSpecificAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_location"
            android:drawablePadding="15dp"
            android:textSize="16dp"
            android:padding="20dp"
            android:background="@drawable/border_down"/>

        <TextView
            android:id="@+id/rentalSpecificCost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_money"
            android:drawablePadding="15dp"
            android:textSize="16dp"
            android:padding="20dp"
            android:background="@drawable/border_down"/>

        <TextView
            android:id="@+id/rentalSpecificCapacity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_capacity"
            android:drawablePadding="15dp"
            android:textSize="16dp"
            android:padding="20dp"
            android:background="@drawable/border_down"/>

        <TextView
            android:id="@+id/rentalSpecificHomeOwnerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_person"
            android:drawablePadding="15dp"
            android:textSize="16dp"
            android:padding="20dp"
            android:background="@drawable/border_down"/>

        <TextView
            android:id="@+id/rentalSpecificHomeOwnerTel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="phone"
            android:linksClickable="true"
            android:drawableStart="@drawable/ic_phone"
            android:drawablePadding="15dp"
            android:textSize="16dp"
            android:padding="20dp"
            android:background="@drawable/border_down"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/imageWrapper"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:layout_marginEnd="5dp"
                android:id="@+id/wrapper_left"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:layout_marginEnd="5dp"
                android:id="@+id/wrapper_right"/>

        </LinearLayout>
    </ScrollView>


</LinearLayout>